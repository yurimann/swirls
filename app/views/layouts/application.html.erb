<!DOCTYPE html>
<html>
  <head>
    <title>Swirls</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <div class="counter">
      <% if current_page?('/cart') %>
        <%= link_to "Home", root_path %>
      <% else %>
        <%= link_to "Go to Cart", cart_index_path %>
      <% end %>
      <% if !session[:temp_cart].nil? %>
        <p>There are <%= session[:temp_cart].length %> items in your cart</p>
      <% else %>
        <p>There are no items in your cart</p>
      <% end %>
    </div>
    <%= yield %>
  </body>
  <%# console %>
</html>
