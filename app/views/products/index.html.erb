<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag('/cart') %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.image %></td>
        <td><%= select_tag "quantity", options_for_select(0..12) %>
        <input type="hidden" value="<%= product.id %>" name="product_id" id="product<%= product.id %>">
        <input type="hidden" value="1" name="order_id">
          <%= submit_tag "Add Item", class: :add %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Product', new_product_path %>
